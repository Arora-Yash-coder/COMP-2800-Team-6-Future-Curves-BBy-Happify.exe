<!DOCTYPE html>
<html lang="en">

<head>
  <title>Register/Login</title>
  <meta charset="utf-8">
  <!-- allow media queries -->
  <meta name="viewport" content="width=device-width ">
  <!-- styles -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  
  <link id="css" rel="stylesheet"  type="text/css" href="/static/css/login<%=css%>.css">

  <!-- bootstrap -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
 
  <script src="/static/js/postrequest.js"></script>

</head>

<body>

  <div class="container">
    <div id="choice_tab">
      <h3 id="reg">Registration</h3>
      <h3 id="log">Login</h3>
    </div>

    <!-- login form -->
    <div id="form-wrapper">
      <form id="userForm" action="/api/users/verify" method="post" style="display: inline-block">
        <h1 class="form-signin-heading">Welcome back!</h1>
        <h3 class="form-signin-heading">Please login</h3>
        <!--			<label for="username">Username:</label>-->
        <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username" />

        <br>

        <!--			<label for="password">Password:</label>-->
        <input type="password" class="form-control" id="password" name="password" min="6" maxlength="16"
          placeholder="Enter Password" />

        <button id="login" type="submit">Log in</button>
        
      </form>
    </div>

    

    <div id="postResultDiv">
    </div>
    <br>
    
  </div>

  <!-- ui choices -->
  <div id='ui_choice'>
    <span>Color Scheme: </span><br/>
    <button class="ui_choice" id='ui_choice_0'>Happy mode</button>
    <button class="ui_choice" id='ui_choice_1'>Fire mode</button>
  </div>
  <!-- footer -->
    <div id="footer">
        Made by FutureCurves.
    </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/static/js/login.js"></script>
    <!-- share on social media -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5ec2cbf0773973c5"></script>
</body>

</html>