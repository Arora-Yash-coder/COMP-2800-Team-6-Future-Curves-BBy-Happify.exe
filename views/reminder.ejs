<html lang="en">

<head>
    <meta charset="UTF-8">
    <!-- allow media queries -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reminder</title>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- styles -->
    <link rel="stylesheet" type="text/css" href="/static/css/navbar<%=css%>.css">
    <link rel="stylesheet" type="text/css" href="/static/css/reminder<%=css%>.css">
</head>

<body>
    <!-- nav bar -->
    <div id="nav">
        <%- navbar  %></div>
    <div id='container'>
        <div>
            <h1>We will remind you to go to bed at</h1>
            <h2 id="time"> </h2>
            <h1> every day</h1>
        </div>




        <br><br>
        <legend>
            <form>

                <label for="hour">Hour</label>
                <input id="hour" type="number" value="23">
                <br />
                <label for="minute">Minute</label>
                <input id="minute" type="number" value="30">
                <br />

            </form>
            <!-- confirm time and start reminder -->
            <button id="confirm_time" onclick="set_notification_time()">Confirm Notification Time</button>
            <button id="start_reminder" onclick="submit()">start daily reminder</button>
            <button id="cancel_reminder" onclick="unregister()">cancel daily reminder</button>


            <div id="pushinfo"></div>

        </legend>
    </div>
    <!-- footer -->
    <footer id='footer'>Made by FutureCurves.</footer>
    <!-- js files -->
    <script src='/static/js/reminder.js'></script>
    <!-- share on social media -->
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5ec2cbf0773973c5"></script>
</body>

</html>